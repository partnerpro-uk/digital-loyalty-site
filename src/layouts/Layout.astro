<html lang={currentLocale} dir={textDirection} style={`--color-primary: ${themeVars['--color-primary']}; --color-primary-dark: ${themeVars['--color-primary-dark']}; --color-accent: ${themeVars['--color-accent']}; --color-bg-light: ${themeVars['--color-bg-light']}; --color-bg-dark: ${themeVars['--color-bg-dark']}; --color-surface-light: ${themeVars['--color-surface-light']}; --color-surface-dark: ${themeVars['--color-surface-dark']}; --color-text-light: ${themeVars['--color-text-light']}; --color-text-dark: ${themeVars['--color-text-dark']}; --font-heading: ${themeVars['--font-heading']}; --font-body: ${themeVars['--font-body']};`}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={siteSettings.favicon || "/favicon.svg"} />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags, hreflang, and Structured Data -->
		<SEOHead
			locale={currentLocale}
			title={title}
			description={description}
			keywords={keywords}
		/>

		<!-- PostHog Analytics -->
		<script is:inline define:vars={{ posthogKey }}>

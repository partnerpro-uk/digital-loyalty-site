---
import '../styles/global.css';
import SEOHead from '../components/SEOHead.astro';
import RegionSelector from '../components/RegionSelector.astro';
import { getLocaleFromPathname, getTextDirection, type Locale } from '../utils/i18n';
import i18next from '../i18next.config';
import { getSiteSettings, getThemeCSSVariables, defaultSettings } from '../../sanity/lib/settings';

const { t, changeLanguage } = i18next;

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
}

// Detect current locale from URL
const currentLocale = getLocaleFromPathname(Astro.url.pathname) as Locale;
const textDirection = getTextDirection(currentLocale);

// Load translations for current locale
await changeLanguage(currentLocale);

// Get SEO content from props or translations
const {
  title = t('seo:home.title'),
  description = t('seo:home.description'),
  keywords = t('seo:home.keywords')
} = Astro.props;

// Get site settings from Sanity (with defaults as fallback)
let siteSettings = defaultSettings;
try {
  siteSettings = await getSiteSettings();
} catch (e) {
  console.warn('Could not fetch site settings from Sanity, using defaults');
}

// Get theme CSS variables
const themeVars = getThemeCSSVariables(siteSettings);

// PostHog key from Sanity or placeholder
const posthogKey = siteSettings.posthogKey || 'YOUR_POSTHOG_PROJECT_API_KEY';
---


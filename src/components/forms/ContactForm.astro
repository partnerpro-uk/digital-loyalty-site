---
// Contact / Demo Request Form
import i18next from '../../i18next.config';

const { t } = i18next;

interface Props {
  formId?: string;
  title?: string;
  subtitle?: string;
}

const {
  formId = 'contact-form',
  title = 'Get in Touch',
  subtitle = 'Fill out the form below and we\'ll get back to you within 24 hours.'
} = Astro.props;
---

<div id={formId} class="contact-form-wrapper">
  {title && (
    <div class="text-center mb-8">
      <h3 class="text-2xl font-bold text-[var(--text-primary)] mb-2">{title}</h3>
      {subtitle && <p class="text-[var(--text-secondary)]">{subtitle}</p>}
    </div>
  )}

  <form
    class="contact-form space-y-6"
    data-netlify="true"
    netlify-honeypot="bot-field"
    name={formId}
  >
    <!-- Hidden form name for Netlify -->
    <input type="hidden" name="form-name" value={formId} />

    <!-- Honeypot for spam prevention -->
    <p class="hidden">
      <label>
        Don't fill this out: <input name="bot-field" />
      </label>
    </p>

    <!-- Name field -->
    <div>
      <label for={`${formId}-name`} class="block text-sm font-medium text-[var(--text-primary)] mb-2">
        {t('common:forms.name_label')} <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id={`${formId}-name`}
        name="name"
        required
        placeholder={t('common:forms.name_placeholder')}
        class="w-full px-4 py-3 rounded-xl border border-[var(--border-color)] bg-[var(--bg-primary)] text-[var(--text-primary)] placeholder:text-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[#8b5cf6]/50 focus:border-[#8b5cf6] transition-all"
      />
    </div>

    <!-- Email field -->
    <div>
      <label for={`${formId}-email`} class="block text-sm font-medium text-[var(--text-primary)] mb-2">
        {t('common:forms.email_label')} <span class="text-red-500">*</span>
      </label>
      <input
        type="email"
        id={`${formId}-email`}
        name="email"
        required
        placeholder={t('common:forms.email_placeholder')}
        class="w-full px-4 py-3 rounded-xl border border-[var(--border-color)] bg-[var(--bg-primary)] text-[var(--text-primary)] placeholder:text-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[#8b5cf6]/50 focus:border-[#8b5cf6] transition-all"
      />
      <span class="email-error hidden text-red-500 text-xs mt-1">
        {t('common:forms.invalid_email')}
      </span>
    </div>

    <!-- Company field (optional) -->
    <div>
      <label for={`${formId}-company`} class="block text-sm font-medium text-[var(--text-primary)] mb-2">
        {t('common:forms.company_label')}
      </label>
      <input
        type="text"
        id={`${formId}-company`}
        name="company"
        placeholder={t('common:forms.company_placeholder')}
        class="w-full px-4 py-3 rounded-xl border border-[var(--border-color)] bg-[var(--bg-primary)] text-[var(--text-primary)] placeholder:text-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[#8b5cf6]/50 focus:border-[#8b5cf6] transition-all"
      />
    </div>

    <!-- Message field -->
    <div>
      <label for={`${formId}-message`} class="block text-sm font-medium text-[var(--text-primary)] mb-2">
        {t('common:forms.message_label')} <span class="text-red-500">*</span>
      </label>
      <textarea
        id={`${formId}-message`}
        name="message"
        required
        rows={4}
        placeholder={t('common:forms.message_placeholder')}
        class="w-full px-4 py-3 rounded-xl border border-[var(--border-color)] bg-[var(--bg-primary)] text-[var(--text-primary)] placeholder:text-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[#8b5cf6]/50 focus:border-[#8b5cf6] transition-all resize-none"
      ></textarea>
    </div>

    <!-- Submit button -->
    <button
      type="submit"
      class="w-full px-6 py-4 rounded-xl bg-gradient-to-r from-[#8b5cf6] to-[#a78bfa] text-white font-semibold text-lg hover:shadow-lg hover:shadow-[#8b5cf6]/20 transition-all duration-300 flex items-center justify-center gap-2"
    >
      <span class="button-text">{t('common:forms.submit')}</span>
      <span class="button-loading hidden">
        <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>{t('common:forms.submitting')}</span>
      </span>
    </button>

    <!-- Success message -->
    <div class="form-success hidden p-6 rounded-xl bg-green-500/10 border border-green-500/20 text-center">
      <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h4 class="text-lg font-semibold text-[var(--text-primary)] mb-2">{t('common:forms.success_title')}</h4>
      <p class="text-[var(--text-secondary)]">{t('common:forms.success_message')}</p>
    </div>

    <!-- Error message -->
    <div class="form-error hidden p-6 rounded-xl bg-red-500/10 border border-red-500/20 text-center">
      <div class="w-12 h-12 bg-red-500 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </div>
      <h4 class="text-lg font-semibold text-[var(--text-primary)] mb-2">{t('common:forms.error_title')}</h4>
      <p class="text-[var(--text-secondary)]">{t('common:forms.error_message')}</p>
    </div>
  </form>
</div>

<script>
  document.querySelectorAll('.contact-form').forEach((form) => {
    const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const buttonText = form.querySelector('.button-text') as HTMLElement;
    const buttonLoading = form.querySelector('.button-loading') as HTMLElement;
    const successMsg = form.querySelector('.form-success') as HTMLElement;
    const errorMsg = form.querySelector('.form-error') as HTMLElement;
    const emailError = form.querySelector('.email-error') as HTMLElement;

    let formStartTime: number | null = null;

    // Track when user starts filling the form
    form.addEventListener('focusin', () => {
      if (!formStartTime) {
        formStartTime = Date.now();
        if (window.posthog) {
          window.posthog.capture('form_started', {
            form_id: (form.closest('.contact-form-wrapper') as HTMLElement)?.id || 'contact-form',
            form_type: 'contact'
          });
        }
      }
    });

    // Email validation
    emailInput?.addEventListener('blur', () => {
      if (emailInput.value && !emailInput.validity.valid) {
        emailError?.classList.remove('hidden');
      } else {
        emailError?.classList.add('hidden');
      }
    });

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Validate email
      if (!emailInput?.validity.valid) {
        emailError?.classList.remove('hidden');
        emailInput?.focus();
        return;
      }

      // Start loading state
      if (buttonText) buttonText.classList.add('hidden');
      if (buttonLoading) buttonLoading.classList.remove('hidden');
      if (submitBtn) submitBtn.disabled = true;

      // Calculate form fill duration
      const duration = formStartTime ? (Date.now() - formStartTime) / 1000 : 0;

      try {
        // Submit to Netlify Forms
        const formData = new FormData(form as HTMLFormElement);

        const response = await fetch('/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams(formData as any).toString()
        });

        if (response.ok) {
          // Hide form, show success
          const formEl = form as HTMLFormElement;
          formEl.querySelectorAll('div, button').forEach((el) => {
            if (!el.classList.contains('form-success') && !el.classList.contains('form-error')) {
              (el as HTMLElement).style.display = 'none';
            }
          });
          successMsg?.classList.remove('hidden');
          errorMsg?.classList.add('hidden');

          // Track success with duration
          if (window.posthog) {
            window.posthog.capture('form_submitted', {
              form_id: (form.closest('.contact-form-wrapper') as HTMLElement)?.id || 'contact-form',
              form_type: 'contact',
              duration_seconds: Math.round(duration),
              successful: true
            });
          }
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        // Show error
        errorMsg?.classList.remove('hidden');
        successMsg?.classList.add('hidden');

        // Track error
        if (window.posthog) {
          window.posthog.capture('form_error', {
            form_id: (form.closest('.contact-form-wrapper') as HTMLElement)?.id || 'contact-form',
            form_type: 'contact',
            duration_seconds: Math.round(duration)
          });
        }
      } finally {
        // Reset button state
        if (buttonText) buttonText.classList.remove('hidden');
        if (buttonLoading) buttonLoading.classList.add('hidden');
        if (submitBtn) submitBtn.disabled = false;
      }
    });
  });

  // Type declaration for PostHog
  declare global {
    interface Window {
      posthog?: {
        capture: (event: string, properties?: Record<string, any>) => void;
      };
    }
  }
</script>

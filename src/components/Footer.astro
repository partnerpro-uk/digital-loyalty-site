// Footer component for Digital Loyalty site
// Fetches content from Sanity CMS with i18n fallback
import i18next from '../i18next.config';
import { getFooterWithFallback } from '../../sanity/lib/navigation';
import { getSiteSettings, defaultSettings } from '../../sanity/lib/settings';
import { getLocaleFromPathname } from '../utils/i18n';

const { t } = i18next;

// Get current language from URL
const currentLang = getLocaleFromPathname(Astro.url.pathname) || 'en';

// Fetch footer from Sanity
let footer = null;
let siteSettings = defaultSettings;
try {
  footer = await getFooterWithFallback(currentLang);
  siteSettings = await getSiteSettings();
} catch (e) {
  console.warn('Could not fetch footer from Sanity, using i18n fallback');
}

// Use Sanity content with i18n fallback
const brandName = siteSettings?.siteName || t('navigation:brand.name');
const logoUrl = siteSettings?.logo || null;
const tagline = footer?.tagline || t('pages:footer.description');
const copyright = footer?.copyright || t('navigation:footer.copyright');

// Social links from Sanity or defaults
const socialLinks = siteSettings?.socialLinks || [];

// Footer columns from Sanity or i18n fallback
const columns = footer?.columns || [
  {
    title: t('navigation:footer.product.title'),
    links: [
      { label: t('navigation:menu.features'), href: '#features' },
      { label: t('navigation:menu.pricing'), href: '#pricing' },
      { label: t('navigation:menu.how_it_works'), href: '#how-it-works' },
      { label: t('navigation:footer.company.contact'), href: '#contact' }
    ]
  },
  {
    title: t('navigation:footer.support.title'),
    links: [
      { label: t('navigation:footer.support.help_center'), href: '#' },
      { label: t('navigation:footer.support.documentation'), href: '#' },
      { label: t('navigation:footer.support.api_reference'), href: '#' },
      { label: t('navigation:footer.company.blog'), href: '/blog' }
    ]
  }
];

// Legal links from Sanity or i18n fallback
const legalLinks = footer?.legalLinks || [
  { label: t('navigation:footer.legal.privacy'), href: '#' },
  { label: t('navigation:footer.legal.terms'), href: '#' },

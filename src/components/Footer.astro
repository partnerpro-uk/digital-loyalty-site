---

<footer class="bg-[var(--bg-secondary)]/50 border-t border-[var(--border-color)] text-[var(--text-primary)] py-12">
  <div class="mx-auto max-w-7xl px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <a href="/" class="inline-block mb-4">
          {logoUrl ? (
            <img src={logoUrl} alt={brandName} class="h-10 w-auto" />
          ) : (
            <span class="text-2xl font-bold text-[var(--text-primary)]">{brandName}</span>
          )}
        </a>
        <p class="text-[var(--text-secondary)] mb-6 max-w-md">
          {tagline}
        </p>
        <div class="flex space-x-4">
          {socialLinks.length > 0 ? (
            socialLinks.map((social: any) => (
              <a href={social.url} class="text-[var(--text-secondary)] hover:text-[#8b5cf6] transition-colors" target="_blank" rel="noopener noreferrer">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" set:html={socialIcons[social.platform] || ''} />
              </a>
            ))
          ) : (
            <>
              <a href="#" class="text-[var(--text-secondary)] hover:text-[#8b5cf6] transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" set:html={socialIcons.twitter} />
              </a>
              <a href="#" class="text-[var(--text-secondary)] hover:text-[#8b5cf6] transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" set:html={socialIcons.instagram} />
              </a>
              <a href="#" class="text-[var(--text-secondary)] hover:text-[#8b5cf6] transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" set:html={socialIcons.linkedin} />
              </a>
            </>
          )}
        </div>
      </div>

      <!-- Dynamic Columns -->
      {columns.map((column: any) => (
        <div>
          <h4 class="font-semibold mb-4 text-[var(--text-primary)]">{column.title}</h4>
          <ul class="space-y-2">
            {column.links?.map((link: any) => (
              <li>
                <a href={link.href} class="text-[var(--text-secondary)] hover:text-[#8b5cf6] transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-[var(--border-color)] mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-[var(--text-secondary)] text-sm">
        {copyright}
      </p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        {legalLinks.map((link: any) => (
          <a href={link.href} class="text-[var(--text-secondary)] hover:text-[#8b5cf6] text-sm transition-colors">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

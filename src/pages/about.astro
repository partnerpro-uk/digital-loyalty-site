---
// About page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FinalCTA from '../components/FinalCTA.astro';
import Layout from '../layouts/Layout.astro';
import i18next from '../i18next.config';

const { t } = i18next;

const pageTitle = t('pages:about.page_title');
const pageDescription = t('pages:about.page_description');

// Values data
const values = [
  {
    key: 'simplicity',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`
  },
  {
    key: 'fairness',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path></svg>`
  },
  {
    key: 'customer_first',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>`
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <Navigation />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-[#8b5cf6]/10 via-[var(--bg-primary)] to-[#a78bfa]/10 relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute -top-40 -right-40 w-96 h-96 bg-[#8b5cf6]/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-[#a78bfa]/10 rounded-full blur-3xl"></div>

      <div class="relative mx-auto max-w-7xl px-6">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl md:text-6xl font-bold tracking-tight text-[var(--text-primary)] mb-6">
            {t('pages:about.hero_title')}
          </h1>
          <p class="text-xl text-[var(--text-secondary)]">
            {t('pages:about.hero_subtitle')}
          </p>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="py-20 bg-[var(--bg-primary)]">
      <div class="mx-auto max-w-7xl px-6">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="inline-flex items-center gap-2 rounded-full border border-[var(--border-color)] bg-[var(--bg-secondary)]/50 px-3 py-1 text-xs text-[var(--text-secondary)] backdrop-blur mb-4">
              <span>{t('pages:about.mission_label')}</span>
            </div>
            <h2 class="text-4xl font-bold text-[var(--text-primary)] mb-6">
              {t('pages:about.mission_title')}
            </h2>
            <p class="text-lg text-[var(--text-secondary)] leading-relaxed">
              {t('pages:about.mission_text')}
            </p>
          </div>

          <!-- Mission visual -->
          <div class="relative">
            <div class="aspect-square max-w-md mx-auto rounded-3xl bg-gradient-to-br from-[#8b5cf6]/20 to-[#a78bfa]/10 border border-[var(--border-color)] flex items-center justify-center">
              <div class="text-center p-8">
                <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[#8b5cf6] to-[#a78bfa] rounded-2xl flex items-center justify-center">
                  <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <p class="text-[var(--text-secondary)]">Simple. Powerful. Effective.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="py-20 bg-[var(--bg-secondary)]/30">
      <div class="mx-auto max-w-7xl px-6">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Story visual -->
          <div class="order-2 lg:order-1 relative">
            <div class="aspect-video rounded-3xl bg-gradient-to-br from-[#8b5cf6]/10 to-[#a78bfa]/5 border border-[var(--border-color)] overflow-hidden">
              <!-- Timeline visualization -->
              <div class="h-full flex items-center justify-center p-8">
                <div class="flex items-center gap-4">
                  <div class="text-center">
                    <div class="w-16 h-16 rounded-full bg-red-500/20 border-2 border-red-500/30 flex items-center justify-center mb-2">
                      <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </div>
                    <span class="text-xs text-[var(--text-secondary)]">Old Way</span>
                  </div>
                  <svg class="w-8 h-8 text-[var(--text-secondary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                  <div class="text-center">
                    <div class="w-16 h-16 rounded-full bg-green-500/20 border-2 border-green-500/30 flex items-center justify-center mb-2">
                      <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="text-xs text-[var(--text-secondary)]">New Way</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="order-1 lg:order-2">
            <div class="inline-flex items-center gap-2 rounded-full border border-[var(--border-color)] bg-[var(--bg-secondary)]/50 px-3 py-1 text-xs text-[var(--text-secondary)] backdrop-blur mb-4">
              <span>{t('pages:about.story_label')}</span>
            </div>
            <h2 class="text-4xl font-bold text-[var(--text-primary)] mb-6">
              {t('pages:about.story_title')}
            </h2>
            <p class="text-lg text-[var(--text-secondary)] leading-relaxed">
              {t('pages:about.story_text')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-20 bg-[var(--bg-primary)]">
      <div class="mx-auto max-w-7xl px-6">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 rounded-full border border-[var(--border-color)] bg-[var(--bg-secondary)]/50 px-3 py-1 text-xs text-[var(--text-secondary)] backdrop-blur mb-4">
            <span>{t('pages:about.values_label')}</span>
          </div>
          <h2 class="text-4xl font-bold text-[var(--text-primary)]">
            {t('pages:about.values_title')}
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {values.map((value) => (
            <div class="group relative rounded-2xl border border-[var(--border-color)] bg-[var(--bg-primary)] p-8 text-center hover:border-[#8b5cf6]/50 transition-all duration-300">
              <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-[#8b5cf6]/5 to-[#a78bfa]/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <div class="relative">
                <div class="w-14 h-14 mx-auto mb-6 bg-gradient-to-br from-[#8b5cf6] to-[#a78bfa] rounded-xl flex items-center justify-center text-white">
                  <Fragment set:html={value.icon} />
                </div>
                <h3 class="text-xl font-semibold mb-3 text-[var(--text-primary)]">
                  {t(`pages:about.values.${value.key}.title`)}
                </h3>
                <p class="text-[var(--text-secondary)]">
                  {t(`pages:about.values.${value.key}.description`)}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <FinalCTA />
  </main>

  <Footer />
</Layout>

<!-- Motion animations -->
<script type="module">
  import { animate, inView, stagger } from "motion";

  // Hero animation
  inView("main section:first-child", ({ target }) => {
    animate(
      target.querySelectorAll("h1, p"),
      { opacity: [0, 1], y: [30, 0] },
      { duration: 0.6, easing: "ease-out", delay: stagger(0.1) }
    );
  });

  // Values cards animation
  inView("main .grid.md\\:grid-cols-3 > div", () => {
    animate(
      "main .grid.md\\:grid-cols-3 > div",
      { opacity: [0, 1], y: [30, 0] },
      { duration: 0.6, easing: "ease-out", delay: stagger(0.1) }
    );
  }, { amount: 0.2 });
</script>

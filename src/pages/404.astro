---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import i18next from '../i18next.config';

const { t } = i18next;
---

<Layout 
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist."
>
  <Navigation />
  
  <!-- 404 Content -->
  <section class="flex items-center justify-center min-h-[70vh] bg-[var(--bg-primary)] px-6">
    <div class="text-center max-w-2xl">
      <!-- 404 Icon -->
      <div class="mb-8">
        <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-gradient-to-br from-[#8b5cf6] to-[#a78bfa] text-white text-6xl font-bold">
          404
        </div>
      </div>
      
      <!-- Heading -->
      <h1 class="text-5xl font-bold text-[var(--text-primary)] mb-4">
        Page Not Found
      </h1>
      
      <!-- Description -->
      <p class="text-xl text-[var(--text-secondary)] mb-8">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      
      <!-- Actions -->
      <div class="flex items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center gap-2 bg-[var(--bg-accent)] text-[var(--text-on-accent)] px-6 py-3 rounded-full font-semibold hover:opacity-90 transition-opacity"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Go Home
        </a>
        
        <a
          href="/blog"
          class="inline-flex items-center gap-2 border border-[var(--border-color)] bg-[var(--bg-secondary)]/30 text-[var(--text-primary)] px-6 py-3 rounded-full font-semibold hover:bg-[var(--bg-secondary)]/50 transition-all"
        >
          Read Blog
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

